<?xml version="1.0" encoding="UTF-8"?>
<sqlmaps>
    <!--  -->
	 <sql name="queryXhLoanerAccountList" common="true">
		<sqlString><![CDATA[
			select 
				a.LOAN_CONTRACT_ID,/*借款合同ID*/
				a.LOAN_APPLY_ID,/*借款申请ID账户*/
				a.ACCOUNT_BALANCE,/*账户余额*/
				a.ACCOUNT_STATE,/*账户状态: 0 正常账户  1历史账户*/
			a.ID
			 from XH_LOANER_ACCOUNT a
			      where 1=1
			$sql
			]]></sqlString>
	</sql>
	<!-- 查询 总数 -->
	<sql name="cnt_queryXhLoanerAccountList" common="false">
		<sqlString>
			<![CDATA[
			SELECT COUNT(*) RecordCount FROM (
			$ibpm_queryXhLoanerAccountList
			)a
		]]>
		</sqlString>
	</sql>
	<!-- 查询 列表分页 -->
	<sql name="page_queryXhLoanerAccountList" common="false">
		<sqlString>
			<![CDATA[
			$ibpm_queryPageBefore
			$ibpm_queryXhLoanerAccountList
			$ibpm_queryPageAfter
			]]>
		</sqlString>
	</sql>
</sqlmaps>
